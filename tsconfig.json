{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "experimentalDecorators": false,
    "paths": {
      "@/utils/*": ["src/utils/*"],
      "@/ui/pages/*": ["src/ui/pages/*"],
      "@/ui/fixtures/*": ["src/ui/fixtures/*"],
      "@/ui/test-data/*": ["src/ui/test-data/*"],
      "@/ui/types/*": ["src/ui/types/*"],
      "@/ui/test-data/constants/*": ["src/ui/test-data/constants/*"],
      "@/ui/api-fixtures/*": ["src/ui/api-fixtures/*"]
    }
  },
  "include": ["tests/**/*.ts", "playwright.config.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
